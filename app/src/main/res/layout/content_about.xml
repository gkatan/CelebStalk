<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_about"
    tools:context=".About">


    <ImageView
        android:src="@android:drawable/ic_menu_view"
        android:layout_width="100dp"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"

        android:scaleType="fitCenter"
        android:layout_weight="10"
        android:id="@+id/imageView" />



    <TextView android:text="This (Stalking) app is to stalk other famous people's facebook, twitter, and instagram with easy clicks." android:layout_width="wrap_content"
        android:id="@+id/text1"
        android:layout_below="@id/imageView"
        android:layout_height="wrap_content" />

    <TextView android:text="" android:layout_width="wrap_content"
        android:id="@+id/text2"
        android:layout_below="@id/text1"
        android:layout_height="wrap_content" />

    <TextView android:text="This app is made by Geula, Jaemo, Maia, and Iris" android:layout_width="wrap_content"
        android:layout_below="@id/text2"
        android:verticalSpacing="30dp"
        android:layout_height="wrap_content" />


</RelativeLayout>
